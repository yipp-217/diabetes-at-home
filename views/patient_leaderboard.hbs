<body>
    {{> sidenav login=true page='patient_leaderboard' patient=patient}}
    <main class="content">  
        <div class="leaderboard_title_container">
            <img src="/res/leaderboard_crown.svg" alt="crown"/>
            <h1>Leaderboard</h1>
        </div>
        <div class="leaderboard_grid_format">
            <!--podium-->
            <div class="podium_container">
                <!--no.2-->
                <div class="podium_column">
                    <div class="podium_user"><h6>{{topfive.[1]}}</h6></div>
                    <div class="podium_rank rank_second"><h6>2nd</h6></div>
                </div>
                <!--no.1-->
                <div class="podium_column">
                    <div class="podium_user"><h6>{{topfive.[0]}}</h6></div>
                    <div class="podium_rank rank_first"><h6>1st</h6></div>
                </div>
                <!--no.3-->
                <div class="podium_column">
                    <div class="podium_user"><h6>{{topfive.[2]}}</h6></div>
                    <div class="podium_rank rank_third"><h6>3rd</h6></div>
                </div>
            </div>

            <div class="sec1">
                <div class="banner_container Top3"><h3 class="stayBlack">First: {{topfive.[0]}}</h3></div>
                <div class="banner_container Top3"><h3 class="stayBlack">Second: {{topfive.[1]}}</h3></div>
                <div class="banner_container Top3"><h3 class="stayBlack">Third: {{topfive.[2]}}</h3></div>
                <div class="banner_container"><h3 class="stayBlack">Fourth: {{topfive.[3]}}</h3></div>
                <div class="banner_container"><h3 class="stayBlack">Fifth: {{topfive.[4]}}</h3></div>            
            </div>
        </div>
            

        {{#if darkMode}}
            <body class="dark"></body>
            {{else}}<body class="leaderboard_background"></body>
        {{/if}}
        

            
        
    </main>
    <br />
    {{> bottomnav page='patient_leaderboard'}}
</body>