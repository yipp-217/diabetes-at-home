<body style="background-color: #eff6f9">
    {{> sidenav login=false page='login'}}
    <main class="content login_grid_format">        
        <!--logo-->
        <div class="logo">
            <div class="logo_container">
                <img class="logo_image" src="/res/logo.svg" />
                <div class="logoText"><h1>Diabetes@Home</h1></div>
            </div>
        </div>

        <!--form-->
        <form action="login" method="POST" class="sec1">
            <div style="margin: 8%"><h4>Welcome Back!</h4></div>
            {{#each flash}}
                <p class="alert" style="color: red;">{{this}}</p>
            {{/each}}
            <div>
                <input type="text" id="email" placeholder="Email" name="username" required />
                <input type="password" id="password" placeholder="Password" name="password" required />
            <button class="medium_button center" type="submit">Login</button>
            </div>
        </form>
    </main>    
</body>

