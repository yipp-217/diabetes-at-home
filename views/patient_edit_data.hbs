{{> sidenav context}}

{{> commentPopup dataField='bloodGlucose' title ='Blood Glucose Level' commentId='bloodGlucoseComment'}}
{{> commentPopup dataField='weight' title = 'Weight' commentId='weightComment'}}
{{> commentPopup dataField='exercise' title = 'Exercise' commentId='exerciseComment'}}
{{> commentPopup dataField='insulin' title = 'Doses of Insulin Taken' commentId='insulinComment'}}

<main class="content mainpage_grid_format">
    <h2 style="text-align: left" class="heading">Today</h2>

    <!-- 4 records -->
    <div class="boxes_container sec1">

        <contianer class="container info_rectangle_container">
            <div class="data_container">
                <img class="body_icons" src="/res/Icon_blood.svg" alt="blood icon image">
                <p class="bigger_p">Blood Glucose Level</p>
                <img class="body_icons comment" src="res/Icon_comment.svg" onclick="openPopup('bloodGlucose')" style="cursor: pointer;">
            </div>
            <div class="data_container input_data">
                <input type="text">
                <p>nmol/L</p> 
            </div>

             <!--desktop comment section-->       
            <div class="desktop_comment">
                {{> comment commentId="bloodGlucoseComment"}}
            </div>

            <!--save button--> 
            <button class="center white_button">SAVE</button>
            
        </contianer>

        <contianer class="container info_rectangle_container">
            <div class="data_container">
                <img class="body_icons" src="/res/Icon-weight.svg" alt="weight icon image">
                <p class="bigger_p">Weight</p>
                <img class="body_icons comment" src="res/Icon_comment.svg" onclick="openPopup('weight')" style="cursor: pointer;">
            </div>
            <div class="data_container input_data">
                <input type="text">
                <p>kgrams</p>   
            </div>

            <!--desktop comment section-->
            <div class="desktop_comment">
                {{> comment commentId="weightComment"}}
            </div>

            <!--save button--> 
            <button class="center white_button">SAVE</button>    

        </contianer>
        
        

    </div>


    <div class="boxes_container sec2">

        <contianer class="container info_rectangle_container">
            <div class="data_container">
                <img class="body_icons" src="/res/Icon_excercise.svg" alt="exercise icon image">
                <p class="bigger_p">Exercise</p>
                <img class="body_icons comment" src="res/Icon_comment.svg" onclick="openPopup('exercise')" style="cursor: pointer;">
            </div>
            <div class="data_container input_data">
                <input type="text">
                <p>steps</p> 
            </div>

            <!--desktop comment section-->            
            <div class="desktop_comment">
                {{> comment commentId="exerciseComment"}}
            </div>

            <!--save button--> 
            <button class="center white_button">SAVE</button>


        </contianer>

        <contianer class="container info_rectangle_container">
            <div class="data_container">
                <img class="body_icons" src="/res/Icon_doses.svg" alt="doses icon image">
                <p class="bigger_p">Doses of Insulin Taken</p> 
                <img class="body_icons comment" src="res/Icon_comment.svg" onclick="openPopup('insulin')" style="cursor: pointer;">           
            </div>
            <div class="data_container input_data">
                <input type="text"> 
                <p>doses</p> 
            </div> 

            <!--desktop comment section-->
            <div class="desktop_comment">
                {{> comment commentId="insulinComment"}}
            </div>

            <!--save button--> 
            <button class="center white_button">SAVE</button>

        </contianer>

    </div>

</main>

{{> bottomnav context}}


<script>
    function openPopup(elemid) {
        document.getElementById(elemid).style.display = "flex";
        document.getElementById(elemid).style.boxShadow = "0 0 0 100vmax rgba(0,0,0,.3)";
    }

    function closePopup(elemid) {
        document.getElementById(elemid).style.display = "none";
        document.getElementById(elemid).style.boxShadow = "0 0 0 100vmax rgba(0,0,0,0)";
    }
</script>