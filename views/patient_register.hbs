{{#if darkMode}}
        <body class="dark"></body>
{{/if}}

{{> clinician_sidenav page="clinician_register_patient" title="Register Patient"}}

    <main class="clinician_main">
        <h3 class="notification">Please fill in this form to create an account for your patient.</h3>
        <form class="big_background" action="/clinician/register-patient" method="POST">
            <section class="setting_contanier">

                <article class="personal_info">
                    <label for="Email"></label><h5>Email:</h5> </label>
                    <input type="text" placeholder="Email" name="email">
                </article>

                <article class="personal_info">
                    <h5>First name:</h5>
                    <input type="text" placeholder="First name" name="nameGiven">
                </article>

                <article class="personal_info">
                    <h5>Last name:</h5>
                    <input type="text" placeholder="Last name" name="nameFamily">
                </article>

                <article class="personal_info">
                    <h5>Screen name:</h5>
                    <input type="text" placeholder="Screen name" name="nameScreen">
                </article>
            </section>
            <section class="setting_contanier">

                <article class="personal_info">
                    <h5>Year born:</h5>
                    <input type="text" placeholder="Year" name="yearBorn">
                </article>



                <article class="personal_info">
                    <label for="Password"></label><h5>Password:</h5></label>
                    <input type="password" placeholder="" name="password">
                </article>

                <article class="personal_info">
                    <label for="Confirm_Password"></label><h5>Confirm Password:</h5></label>
                    <input type="password" placeholder="" name="password2">
                </article>

                <article class="personal_info hidden">
                    <label for="Confirm_Password"></label><h5>Confirm Password:</h5></label>
                    <input type="password" placeholder="" name="password2">
                </article>
                <section class="personal_info register_page_btn"><button class="light_button" id="register_btn"><a href=""><h5>Register</h5></a></button></section>
            </section>
        
        </form>
    </main>
